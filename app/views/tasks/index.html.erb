<p style="color: green"><%= notice %></p>

<%= current_user.try(:user_name) %>
<h1>Tasks</h1>

<div id="tasks">
  <% @tasks.each do |task| %>
    <%= render task %>
    <p>
      <%= link_to "Show this task", task %>
    </p>
  <% end %>
</div>

<%= link_to "New task", new_task_path %>

<%= link_to "Logout", destroy_user_session_path, method: :delete %>